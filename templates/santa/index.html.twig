{% extends 'base.html.twig' %}

{% block title %}Hello SantaController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Join to secret Santa</h1>
    {{ app.user.email ?? '' }}
    <a type="button" href="/{{ app.user ? 'logout': 'login'}}">
        {{ app.user ? 'Logout' : 'Login/Regist' }}
    </a>
    {% if app.user %}
        <div>
            <a type="button" class="btn btn-primary" href="{{ path('add_group') }}">Create group</a><br>
        </div>

        <table class="table">
            <thead>
            <tr>
                {#            <th scope="col">#</th>#}
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for group in groups %}
                <tr>
                    {#                <th scope="row">{{ group.id }}</th>#}
                    <td>{{ group.name }}</td>
                    <td>
                        <a type="button" class="btn btn-secondary" href="#">Join</a>
                        <a type="button" class="btn btn-warning" href="#">Leave</a>
                        {#                    <a type="button" class="btn btn-danger" href="{{ path('delete_author', {'id': author.id}) }}">Delete</a>#}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

</div>
{% endblock %}
